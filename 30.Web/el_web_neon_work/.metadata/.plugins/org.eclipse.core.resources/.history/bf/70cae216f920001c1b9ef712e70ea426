package a.b.c.com.common;

import java.sql.Connection;
import java.sql.DriverManager;

public abstract class CommonXML {
	
	// file path
	//  C:\00.KOSMO93\30.Web\el_web_neon _work\testCss\WebContent\xmlTest
	public static final String XML_FILE_PATH = "C:\\00.KOSMO93\\30.Web\\el_web_neon _work\\testCss\\WebContent\\xmlTest\\file.xml";

	private static final String KBD_URL = "jdbc:oracle:thin:@localhost:1521:orcl";
	private static final String KBD_USER = "scott";
	private static final String KBD_PASS = "tiger";
	private static final String KBD_DRIVER = "oracle.jdbc.driver.OracleDriver";
	
	public static Connection getConnection(){
		
		Connection conn = null;
		
		try{
			Class.forName(CommonXML.KBD_DRIVER);
			conn = DriverManager.getConnection( CommonXML.KBD_URL
												,CommonXML.KBD_USER
												,CommonXML.KBD_PASS);
		}catch(Exception c){
			System.out.println("드라이버 찾기에 문제가 발생 >>> : " + c);
		}
		
		return conn;
	}
}
