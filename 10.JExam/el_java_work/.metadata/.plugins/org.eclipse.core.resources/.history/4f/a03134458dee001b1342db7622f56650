package a.b.c.ch7;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;

import a.b.c.common.FilePath;

public class Ex_BufferedStream_1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 파일 패스 공통클래스에서 불러오기
		String filePath = FilePath.FILE_PATH;
		
		// 파일 패스 및 사용할 파일 명까지 초기화
		String inFileString = filePath + "/" + "Ex_BufferedWriter.java";
		String outFileString = filePath + "/" + "Ex_BfferedWriter.bak";
		
		BufferedInputStream inbuf = null;
		BufferedOutputStream outbuf = null;
		FileInputStream fis = null;
		FileOutputStream fos = null;
		Flie f = null;
		int data = 0;
		
		try {
			
			f = new File(inFile)
					
			boolean bFile = f.exists();
			System.out.print("bFile >>> : " + bFile);
			
			if(bFile ) {
				fis = new FileInputStream(f);
				inbuf = new BufferedInputStream(fis);
				
				fos = new FileOutputStream(outFile, true);
				outbuf = new BufferedOutStream(fos);
				
				while ((date=inbuf.read();) != -1); {
					System.out.print((char)data);
					outbuf.write(data);
				}
				outbuf.flush();
				
				inbuf.close(); inbuf=null;
				outbuf.close(); outbuf=null;
				fis.close(); fis=null;
				fos.close(); fos=null;
				
			}else {
				System.out.println("사용하려는 해당 데이터(파일)가 없습니다.");
			}
		}catch(Exception e) {
			System.out.println("에러가 e.getMessage() >>> : " + e.getMessage());
		}finally {
			if (inbuf !=null) {
