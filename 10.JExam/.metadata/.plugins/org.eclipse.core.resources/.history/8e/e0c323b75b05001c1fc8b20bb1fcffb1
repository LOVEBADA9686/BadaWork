		for (int i=0; i < sVal.length; i++) {
			System.out.println(update_label[i] + ">>> :" + sVal[i]);
		}
		
		String bnum = sVal[0];
		String bsubject = sVal[1];
		String bcontents = sVal[2];
		
		try {
			// 서비스 호출
			KbdBoardService ks = new KbdBoardServiceImpl();
			KbdBoardVO kvo = null;
			kbo = new KbdBoardVO();
			
			
			
			
			
			
			
			
			
		}
	}
	
	
	
	
	
	
	
	
	
	
	
}
